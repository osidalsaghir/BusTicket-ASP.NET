
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutReg.cshtml";
}
<div class="col-lg-12">
    <div class="p-5">
        <div class="text-center">
            <h4 class="text-dark mb-4">Create an Account!</h4>
        </div>
        <form class="user" method="post" action="/User/AddAccount">
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="text" id="exampleFirstName" placeholder="First Name" name="userPanel_Name"></div>
                <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="exampleFirstName" placeholder="Last Name" name="userPanel_Surname"></div>
                <hr>

            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label class="pl-md-1">Birth Date</label>
                    <input type="date" class="form-control form-control-user" name="birthdate" />
                </div>
                <div class="col-sm-6">
                    <label>  </label>
                    <input class="form-control form-control-user" type="text" id="exampleFirstName" placeholder="Identity Number" name="userPanel_national_ID">
                </div>
            </div>

            <div class="form-group"><input class="form-control form-control-user" type="email" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email Address" name="userContact_email"></div>
            <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="password" id="examplePasswordInput" placeholder="Password" name="user_Password"></div>
                <div class="col-sm-6"><input class="form-control form-control-user" type="password" id="exampleRepeatPasswordInput" placeholder="Repeat Password" name="password_repeat"></div>
            </div><button class="btn btn-primary btn-block text-white btn-user" type="submit">Register Account</button>


        </form>
        <hr><a  href="/User/SignIn" role="button">I already have an account</a>
    </div>
</div>