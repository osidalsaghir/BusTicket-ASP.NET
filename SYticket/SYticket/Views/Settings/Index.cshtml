
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutReg.cshtml";
}

<div class="container-fluid">
    <h3 class="text-dark mb-4 mt-5">Profile</h3>
    <div class="row mb-3">
       
        <div class="col-lg-12">
           
            <div class="row">
                <div class="col">
                    <div class="card shadow mb-3">
                        <div class="card-header py">
                            <p class="text-primary m-0 font-weight-bold">User Information</p>
                        </div>
                        <div class="card-body">
                            <form action="/Settings/Index" method="post">
                                <div class="form-row">

                                    <div class="col">
                                        <div class="form-group"><label for="email"><strong>Email Address</strong></label><input disabled class="form-control" type="email" placeholder="user@example.com" value="@ViewBag.us.user_Email" name="email"></div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="date"><strong>Birth Date</strong></label><input class="form-control" type="date" value="@ViewBag.date" name="date"></div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="first_name"><strong>First Name</strong></label><input class="form-control" type="text" value="@ViewBag.up.userPanel_Name" placeholder="John" name="first_name"></div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"><label for="last_name"><strong>Last Name</strong></label><input class="form-control" type="text" placeholder="Doe" value="@ViewBag.up.userPanel_Surname"  name="last_name"></div>
                                    </div>
                                </div>
                                <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">Save Settings</button></div>
                            </form>
                        </div>
                    </div>
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold">Contact Settings</p>
                        </div>
                        <div class="card-body">
                            <form action="/Settings/ChangeContact" method="post">
                                <div class="form-group"><label for="Con_PhoneNumber"><strong>Phone Number</strong></label><input class="form-control" type="text" placeholder="Phone Number" value="@ViewBag.uc.userContact_PhoneNumber" name="Con_PhoneNumber"></div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group"><label for="Con_Email"><strong>Email</strong></label><input class="form-control" type="text" placeholder="Email" value="@ViewBag.uc.userContact_email" name="Con_Email"></div>
                                    </div>
                                    
                                </div>
                                <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">Save&nbsp;Settings</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
</div>
        </div>

